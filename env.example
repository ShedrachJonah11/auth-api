# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/user-auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Email Configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@example.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Cache Configuration
CACHE_TTL=300

# Request Configuration
REQUEST_TIMEOUT=30000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Optional / Feature Flags (added over time)
LOG_LEVEL=info
SWAGGER_ENABLED=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_HISTORY_COUNT=5
FILE_UPLOAD_MAX_MB=10
WEBHOOK_SIGNING_SECRET=your-webhook-secret
HEALTH_CHECK_ENABLED=true
REQUEST_ID_HEADER=x-request-id
TRUST_PROXY=false
MFA_ISSUER_NAME=AuthAPI
SESSION_ABSOLUTE_TIMEOUT=86400
COOKIE_SECURE=true
COOKIE_SAME_SITE=lax
AUDIT_RETENTION_DAYS=90
ACTIVITY_LOG_ENABLED=true
METRICS_ENABLED=false
API_KEY_HEADER_NAME=x-api-key
DEVICE_MAX_SESSIONS=5
ACCOUNT_DELETION_GRACE_DAYS=30
AVATAR_MAX_SIZE_KB=512
PASSWORD_RESET_EXPIRY_MINUTES=60
EMAIL_FROM_NAME=Auth API
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100
BCRYPT_ROUNDS=10
JWT_ISSUER=auth-api
CORS_MAX_AGE=86400
RATE_LIMIT_SKIP_SUCCESS=true
ALLOW_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=false
DEFAULT_USER_ROLE=user
SESSION_COOKIE_NAME=session_id
REFRESH_TOKEN_COOKIE_NAME=refresh_token
